<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/addproduct.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="bg-gray-800 main">
        <Center><h1 class="product">Product Details</h1></Center>
        <form action="/addproduct" method="post" enctype="multipart/form-data">
            <div class="img_box">
                <img src="" name="image" alt=" Add product img...." id="Profile_image">
            <label for="image" class="bg-sky-600 hover:bg-sky-700">Add Product image</label>
            <input type="file" name="image" id="image" accept="image/*" required>
            </div>
            <div class="details">
                <input type="email" name="email"  value="<%= user.email %>" readonly>
                <input type="text" name="brand"  placeholder="Enter Your Brand name">
                <input type="text" name="productName" placeholder="Enter Your Product Name">
                <input type="number" name="prize" placeholder="Product prize">
                <input type="number" name="discount" placeholder="Discount in percentage">
                <input type="submit" value="Add Product" class="bg-sky-600 hover:bg-sky-700">
            </div>
        </form>
    </div>














    <script>
        const image=document.querySelector("#image");
        const Profile_image=document.querySelector("#Profile_image");
        image.addEventListener('change', function() {
        if (this.files && this.files[0]) {
            const reader = new FileReader();
            reader.onload = (e) => Profile_image.src = e.target.result;
            reader.readAsDataURL(this.files[0]);
        }
    });
    </script>
</body>
</html>