<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheet/sell.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>


<body>
    <div class="bg-zinc-300 main">
        <% if(user) { %>
            <div class="user-info bg-gray-800 p-4 text-white flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center space-x-4 mb-4 md:mb-0">
                    <img src="<%=user.imgurl || '/images/default/profile_default.webp' %>" alt="Profile" class="w-12 h-12 rounded-full">
                    <div>
                        <h2 class="text-xl font-bold"><%= user.name %></h2>
                        <p class="text-gray-400"><%= user.email %></p>
                    </div>
                </div>
                
                <div class="flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-4">
                    <a href="/" class="w-full md:w-auto">
                        <button class="bg-sky-500 hover:bg-sky-700 h-10 w-full md:w-20 rounded-md font-bold">Home</button>
                    </a>
                    <a href="/sellerorders" class="text-white">Customer Orders</a>
                    <a href="/addproduct" id="add_product" class="flex items-center space-x-2">
                        <button class="text-2xl"><i class="fa-solid fa-plus"></i></button>
                        <label for="add_product" class="cursor-pointer">Add Product</label>
                    </a>
                </div>
            </div>
            <% } %>

        <h1 style="margin-top: 50px; margin-left: 50px; font-weight: bolder; font-size: 1.5rem;">All Product</h1>
        <div class="product">
            <% alldata.forEach(function(product) { %>
            <div class="card">
                <img src="<%= product.imgurl || '/images/default-product.png' %>" alt="<%= product.productName || 'Product Image' %>" height="200px" width="200px" style="margin-right: 20px;">
                <div class="product_details">
                    <h1><%=product.brand%></h1>
                    <h1><%=product.productName%></h1>
                    <p><%=product.prize%></p>
                    <p><%=product.discount%></p>
                </div>
                <h1 class="delete"><label for="Delete">Delete Product</label><form action="/deleteproduct" method="post">
                    <input type="text" value="<%=product.id%>" name="deleteData" style="display: none;">
                    <input type="submit" id="Delete" style="display: none;">
                </form></h1>
            </div>
            <%})%>

        </div>
    </div>
</body>

</html>